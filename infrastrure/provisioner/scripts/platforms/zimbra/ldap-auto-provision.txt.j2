md {{ zimbra_domain }} zimbraAutoProvAccountNameMap "uid"
md {{ zimbra_domain }} +zimbraAutoProvAttrMap "displayName=Name"
md {{ zimbra_domain }} zimbraAutoProvAttrMap "cn=cn"
md {{ zimbra_domain }} +zimbraAutoProvAttrMap "givenName=givenName"
md {{ zimbra_domain }} +zimbraAutoProvAttrMap "sn=sn"
md {{ zimbra_domain }} +zimbraAutoProvAttrMap "description=description"
md {{ zimbra_domain }} zimbraAutoProvAuthMech "LDAP"
md {{ zimbra_domain }} zimbraAutoProvBatchSize 50

md {{ zimbra_domain }} zimbraAutoProvLdapAdminBindDn "{{ ldap['bind_dn'] }}"
md {{ zimbra_domain }} zimbraAutoProvLdapAdminBindPassword "{{ ldap['bind_password'] }}"
md {{ zimbra_domain }} zimbraAutoProvLdapBindDn "{{ ldap['bind_dn'] }}"
md {{ zimbra_domain }} zimbraAutoProvLdapSearchBase "{{ ldap['search_base'] }}"
md {{ zimbra_domain }} zimbraAutoProvLdapSearchFilter "({{ ldap['filter_username'] }})"
