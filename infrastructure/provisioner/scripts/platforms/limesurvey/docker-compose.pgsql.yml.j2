version: "3.0"
services:
  limesurvey:
    build:
      # Hint: Change it to 3.0/apache/ if you want to use LimeSurvey 3.*
      context: 6.0/apache/
      dockerfile: Dockerfile
    volumes:
      # Hint: This is just an example, change /tmp to something persistent
      - /tmp/upload/surveys:/var/www/html/upload/surveys
    links:
      - lime-db
    depends_on:
      - lime-db
    restart: unless-stopped
    ports:
      # Hint: Change it to 80:8080 if you are using LimeSurvey 3.*
      - "8080:8080"
    environment:
      - "DB_TYPE=pgsql"
      - "DB_PORT=5432"
      - "DB_HOST=lime-db"
      - "DB_PASSWORD={{ database_password }}"
      - "ADMIN_PASSWORD={{ app_secret }}"
      - "ADMIN_USER=admin"
      - "ADMIN_NAME=LimeSurvey Admin"
      - "ADMIN_EMAIL={{ admin_email }}"

  lime-db:
    image: docker.io/postgres:10
    restart: unless-stopped
    volumes:
      - db-data:/var/lib/postgresql/data
    environment:
      - "POSTGRES_USER=limesurvey"
      - "POSTGRES_DB=limesurvey"
      - "POSTGRES_PASSWORD={{ database_password }}"

volumes:
  db-data:
